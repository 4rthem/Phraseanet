{% import "common/thumbnail.twig" as thumbnail %}

{% extends "common/index.twig" %}

{% block javascript %}
  <script type="text/javascript" src="/skins/lightbox/jquery.validator.mobile.js"></script>
{% endblock %}

{% block stylesheet %}
  <link rel="stylesheet" href="/skins/lightbox/jquery.validator.mobile.css" />
{% endblock %}

{% block content %}
<div data-role="page" data-ajax="false" id="note_form_{{basket_element.get_sselcont_id()}}">
  <div data-role="header">
    <h1>{{basket_element.get_record().get_title}} - Note</h1>
  </div>
  <div data-role="content">
    <form action="">
        <textarea class="note_area"
          id="note_area_{{basket_element.get_sselcont_id()}}"
          {% if basket_element.get_my_note() == '' %}placeholder="Note"{% endif %}>{{basket_element.get_my_note()}}</textarea>
          <button type="submit" class="note_area_validate">Submit</button>
        <input name="sselcont_id" value="{{basket_element.get_sselcont_id()}}" type="hidden"/>
    </form>
  </div>
  <div data-role="footer">

  </div>
</div>
{% endblock %}
